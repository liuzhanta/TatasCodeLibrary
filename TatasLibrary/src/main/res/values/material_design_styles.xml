<resources>

    <style name="MaterialDesign_Dialog_Button_Style">
        <item name="android:layout_height">@dimen/material_design_dialog_button_height</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:minWidth">@dimen/material_design_dialog_button_minWidth</item>
        <item name="android:minHeight">@dimen/material_design_dialog_button_min_height</item>
        <item name="android:padding">@dimen/material_design_dialog_button_padding</item>
        <item name="android:textColor">@color/register_green</item>
        <item name="android:textSize">@dimen/text_size_16</item>
    </style>

    <style name="MaterialDesign_Dialog_Style" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimAmount">0.8</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

</resources>
