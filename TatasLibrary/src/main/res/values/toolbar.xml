<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--溢出菜单样式-->
    <style name="ToolbarPopupTheme" parent="ThemeOverlay.AppCompat.Light">
        <!-- 是否覆盖锚点，默认为true，即盖住Toolbar -->
        <item name="overlapAnchor">true</item>
        <item name="android:dropDownWidth">wrap_content</item>
        <item name="android:paddingRight">0dp</item>
        <!-- 弹出层背景颜色 -->
        <item name="android:popupBackground">@drawable/menu_dropdown_panel</item>
        <!-- 弹出层垂直方向上的偏移，即在竖直方向上距离Toolbar的距离，值为负则会盖住Toolbar -->
        <item name="android:dropDownVerticalOffset">5dp</item>
        <!-- 弹出层水平方向上的偏移，即距离屏幕左边的距离，负值会导致右边出现空隙 -->
        <item name="android:dropDownHorizontalOffset">0dp</item>
        <!-- 设置弹出菜单文字颜色 -->
        <item name="android:textColor">@color/green_light</item>
    </style>

    <!--ToolbarStyle-->
    <style name="ToolbarStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white</item>
        <item name="subtitleTextAppearance">@style/SubTitleTextStyle</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
    </style>

    <!--子标题样式-->
    <style name="SubTitleTextStyle" parent="Base.TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textColor">@color/holo_dialog_text_color</item>
    </style>

    <!--Toolbar主题-->
    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/holo_dialog_text_color</item>
        <item name="subtitleTextStyle">@style/SubTitleTextStyle</item>
        <item name="actionMenuTextColor">@color/black</item>

    </style>
</resources>